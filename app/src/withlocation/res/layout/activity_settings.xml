<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sign_btn"
        android:layout_marginStart="@dimen/spacing_xsmall"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:layout_marginEnd="@dimen/spacing_xsmall"
        android:gravity="center"
        android:text="@string/signin_google"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textsize_xlarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xxsmall"
            android:layout_weight="0.5">

        </com.google.android.gms.common.SignInButton>

        <Button
            android:id="@+id/sign_out_button"
            style="@style/Theme.MaterialComponents.Light"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_sign_out_btn"
            android:layout_marginTop="@dimen/spacing_unicum"
            android:layout_marginEnd="@dimen/spacing_xxsmall"
            android:layout_weight="0.6"
            android:background="@color/colorHighlight"
            android:padding="@dimen/padding_frame"
            android:text="@string/btn_sign_out" />
    </LinearLayout>

</LinearLayout>