<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wthr_frgmnt_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_header"
    android:isScrollContainer="true"
    tools:context=".WthrFragment">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/size_loading_bar_small"
                android:layout_height="@dimen/size_loading_bar_small"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_wthr_to_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xxxsmall"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_wthr_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:text="@string/tv_wthr_location"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_large"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_current_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_xxxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:text="@string/tv_current_date"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_small"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_wthr_location" />

                    <TextView
                        android:id="@+id/weather_icon"
                        android:layout_width="@dimen/size_wthr_logo_small"
                        android:layout_height="@dimen/size_wthr_logo_small"
                        android:layout_margin="@dimen/spacing_xxsmall"
                        android:contentDescription="@string/content_description"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="@dimen/textsize_xxlarge"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_wthr_value" />

                    <TextView
                        android:id="@+id/tv_wthr_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_xxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:text="@string/tv_wthr_value"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_xlarge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_current_date" />

                    <TextView
                        android:id="@+id/tv_wthr_dscrptn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_xxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:text="@string/tv_wthr_dscrptn"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/weather_icon" />

                    <TextView
                        android:id="@+id/tv_wthr_wind_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_xxxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:layout_marginBottom="@dimen/spacing_xsmall"
                        android:text="@string/tv_wthr_wind_info"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_wthr_dscrptn"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tv_wthr_pressure_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_xxxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:text="@string/tv_wthr_pressure_info"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_wthr_wind_info" />

                    <TextView
                        android:id="@+id/tv_onWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xxsmall"
                        android:layout_marginTop="@dimen/spacing_xxxsmall"
                        android:layout_marginEnd="@dimen/spacing_xxsmall"
                        android:layout_marginBottom="@dimen/spacing_xsmall"
                        android:text="@string/tv_onWeek"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/textsize_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_wthr_pressure_info"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>