<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.geekbrains.weatherinworld.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/activity_town_change">
        <action
            android:id="@+id/action_nav_home_to_wthrActivity"
            app:destination="@id/wthrActivity" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.geekbrains.weatherinworld.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/activity_settings" />
    <activity
        android:id="@+id/wthrActivity"
        android:name="com.geekbrains.weatherinworld.WthrActivity"
        android:label="WthrActivity" />
</navigation>