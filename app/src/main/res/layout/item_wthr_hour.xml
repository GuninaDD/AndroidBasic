<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_wthr"
            android:layout_width="@dimen/width_icon_wthr"
            android:layout_height="@dimen/height_icon_wthr"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ico_wthr_cntnt_dscrptn"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/icon_overcast" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_xxxsmall"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_xxxsmall"
                android:text="@string/tv_wthrhours_hour"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textsize_xlarge" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_xxxsmall"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_xxxsmall"
                android:text="@string/tv_wthrhours_value"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textsize_xlarge" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_xxxsmall"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_xxxsmall"
                android:text="@string/tv_wthrhours_wind"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textsize_xlarge" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>