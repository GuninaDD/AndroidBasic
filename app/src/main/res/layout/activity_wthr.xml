<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_header"
    tools:context=".WthrFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/size_loading_bar"
        android:layout_height="@dimen/size_loading_bar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_wthr_to_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xxsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:layout_marginBottom="@dimen/spacing_xxsmall" />
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wthr_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:text="@string/tv_wthr_location"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textsize_location_wthr"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:text="@string/tv_current_date"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textsize_xlarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_wthr_location" />

            <TextView
                android:id="@+id/tv_wthr_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:text="@string/tv_wthr_value"
                android:textColor="@color/colorText"
                android:textSize="@dimen/textsize_wthr_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_current_date" />

            <TextView
                style="@style/LightMediumText"
                android:id="@+id/tv_wthr_dscrptn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:text="@string/tv_wthr_dscrptn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_wthr_value" />

            <TextView
                style="@style/LightMediumText"
                android:id="@+id/tv_wthr_wind_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:layout_marginBottom="@dimen/spacing_xsmall"
                android:text="@string/tv_wthr_wind_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_wthr_dscrptn"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                style="@style/LightMediumText"
                android:id="@+id/tv_wthr_pressure_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:text="@string/tv_wthr_pressure_info"
                android:textSize="@dimen/textsize_xlarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_wthr_wind_info" />

            <TextView
                style="@style/LightMediumText"
                android:id="@+id/tv_onWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:layout_marginBottom="@dimen/spacing_xsmall"
                android:text="@string/tv_onWeek"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_wthr_pressure_info"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>